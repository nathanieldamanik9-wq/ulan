        Your browser does not support the audio element.
    </audio>

    <script>
        // Membuat partikel sparkle
        function createParticles() {
            const container = document.querySelector('.container');
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // Posisi acak di sekitar bunga
                const posX = Math.random() * 600 - 300;
                const posY = Math.random() * 300 + 50;
                const size = Math.random() * 6 + 4;
                
                particle.style.left = `calc(50% + ${posX}px)`;
                particle.style.top = `${posY}px`;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Delay animasi acak
                const delay = Math.random() * 5;
                particle.style.animationDelay = `${delay}s`;
                
                container.appendChild(particle);
            }
        }

        // Efek hover pada bunga
        document.querySelector('.flower').addEventListener('mouseenter', function() {
            this.style.transform = 'scale(1.08) rotate(3deg)';
            this.style.transition = 'transform 0.4s ease';
        });

        document.querySelector('.flower').addEventListener('mouseleave', function() {
            this.style.transform = 'scale(1) rotate(0deg)';
        });

        // Kontrol audio
        const audio = document.getElementById('kemesraanAudio');
        const audioPlayer = document.getElementById('audioPlayer');
        
        // Tampilkan player setelah 2 detik
        setTimeout(() => {
            audioPlayer.classList.add('show');
        }, 2000);

        // Klik player untuk kontrol audio
        audioPlayer.addEventListener('click', function(e) {
            e.stopPropagation();
            
            if (audio.paused) {
                audio.play().then(() => {
                    audioPlayer.style.backgroundColor = 'rgba(144, 238, 144, 0.95)';
                    audioPlayer.querySelector('.audio-icon').textContent = '‚è∏Ô∏è';
                    audioPlayer.querySelector('.audio-title').textContent = 'Kemesraan - Playing';
                }).catch(error => {
                    console.error('Error playing audio:', error);
                    alert('‚ö†Ô∏è Tidak dapat memutar lagu. Pastikan file "kemesraan.mp3" ada di folder yang sama.');
                });
            } else {
                audio.pause();
                audioPlayer.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
                audioPlayer.querySelector('.audio-icon').textContent = 'üéµ';
                audioPlayer.querySelector('.audio-title').textContent = 'Kemesraan';
            }
        });

        // Auto-play saat halaman dimuat (dengan interaksi user terlebih dahulu)
        document.addEventListener('click', function initAudio() {
            // Hapus event listener setelah pertama kali
            document.removeEventListener('click', initAudio);
            
            // Coba play audio (bisa gagal jika browser block auto-play)
            audio.play().catch(error => {
                console.log('Auto-play blocked by browser - user interaction required');
            });
        }, { once: true });

        // Deteksi ketika audio selesai loading
        audio.addEventListener('canplaythrough', function() {
            console.log('üéµ Lagu "Kemesraan" siap diputar!');
        });

        audio.addEventListener('error', function() {
            console.error('‚ùå Gagal memuat lagu "Kemesraan"');
            audioPlayer.style.backgroundColor = 'rgba(255, 100, 100, 0.95)';
            audioPlayer.querySelector('.audio-title').textContent = 'Lagu Tidak Ditemukan';
            audioPlayer.querySelector('.audio-artist').textContent = 'Letakkan file kemesraan.mp3 di folder yang sama';
        });

        // Inisialisasi partikel saat halaman dimuat
        window.addEventListener('load', createParticles);
    </script>
